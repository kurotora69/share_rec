<%# <%= render "devise/shared/header" %>

<%= form_with  model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='user-login'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>

  <div class="login">
    <div class='user-confirm'>
      <label class="login-text">メールアドレス</label>
      <%# <span class="indispensable">必須</span> %>
    </div>
    <%= f.email_field :email, class:"input-confirm", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="login">
    <div class='user-confirm'>
      <label class="form-text">パスワード</label>
      <%# <span class="indispensable">必須</span> %>
    </div>
    <%= f.password_field :password, class:"input-confirm", id:"password", placeholder:"" %>
  </div>

  <div class='login-btn'>
    <%= f.submit "ログイン", class:"login-red-btn" %>
  </div>
</div> 
<% end %>


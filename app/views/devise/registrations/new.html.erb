

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  
<div class='user-new'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%= render "devise/shared/error_messages", model: f.object %>

  <div class="user-info">
    <div class='user-info-form'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) レク太郎", maxlength:"40" %>
  </div>
  <div class="user-info">
    <div class='user-info-form'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="user-info">
    <div class='user-info-form'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="user-info">
    <div class='user-info-form'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="user-info">
    <div class='user-info-form'>
      <label class="form-text">働いている施設のジャンル</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nursing_home, class:"input-default", id:"nursing_home", placeholder:"例) デイサービス・特別養護老人ホーム・介護老人保健施設施設・訪問介護など", maxlength:"40" %>
  </div>
  <div class="user-info">
    <div class='user-info-form'>
      <label class="form-text">職種</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :occupation, class:"input-default", id:"occupation", placeholder:"例)", maxlength:"40" %>
  </div>


  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
</div> 
<% end %>

